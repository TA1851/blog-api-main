# EditorConfig は、さまざまなエディターやIDEで一貫したコーディングスタイルを維持するのに役立ちます
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.py]
indent_size = 4
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2

[*.{js,ts,json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.xml]
indent_size = 2

[Makefile]
indent_style = tab

[*.{ini,cfg}]
indent_size = 4
